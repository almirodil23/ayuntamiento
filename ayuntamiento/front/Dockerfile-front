# Etapa de construcción
FROM node:latest as build

WORKDIR /app

COPY package*.json ./
RUN npm install

COPY . .

# Construir la aplicación Angular para producción
RUN npm run build --prod

# Etapa de producción
FROM nginx:alpine

COPY default.conf /etc/nginx/conf.d/default.conf

# Copiar los archivos generados en la etapa de construcción
COPY --from=build /app/dist/front/browser /usr/share/nginx/html

# Exponer el puerto en el que el servidor Nginx escuchará
EXPOSE 8000:4200

CMD ["/bin/sh", "-c", "sed -i 's/listen  .*/listen 8000;/g' /etc/nginx/conf.d/default.conf && exec nginx -g 'daemon off;'"]






# Comando para iniciar el servidor Nginx
CMD ["nginx", "-g", "daemon off;"]
